<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="app.ucr.jcm.com.appucr.HorariosActivity$PlaceholderFragment">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="100"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="25"
            app:cardElevation="24dp">

            <ListView
                android:id="@+id/horarioEducacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="25"
                android:scrollbars="none"
                android:background="#F8555E"
                android:forceHasOverlappingRendering="false"></ListView>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="25"
            app:cardElevation="24dp">

            <ListView
                android:id="@+id/horarioInvestigacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scrollbars="none"
                android:background="#4C6A8D"
                android:layout_weight="25"
                android:forceHasOverlappingRendering="false"></ListView>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="25"
            app:cardElevation="24dp">

            <ListView
                android:id="@+id/horarioIngenieria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scrollbars="none"
                android:background="#0C9DA9"
                android:layout_weight="25"
                android:forceHasOverlappingRendering="false"></ListView>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="25"
            app:cardElevation="24dp">

            <ListView
                android:id="@+id/horarioDeportivas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="25"
                android:scrollbars="none"
                android:background="#FBC38D"
                android:forceHasOverlappingRendering="false"></ListView>
        </android.support.v7.widget.CardView>





    </LinearLayout>
</RelativeLayout>

